{{> elements/header}}
<div class="container">
    <div class="jumbotron">
        <div class-"row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                <a href="#" class="thumbnail">
                    <img src="{{contents.img_file}}" alt="...">
                </a>
            </div>
            
        </div>
        <h2>Welcome, {{contents.username}}</h2>
        <h4>This is your dashboard</h4>         
    </div>
    <div class="row">
        <div class="col-md-12">   
            <a href="/users/{{contents.username}}/postJob"><button class="btn btn-success btn-right btn-lg">Post a job</button></a>      
            {{!--<h2>Welcome {{contents.username}}</h2>
            <h2>Email on file {{contents.email}}</h2>--}}
        </div> 
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 job-panel text-center">
            <h3>Current Job postings</h3>

            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    </tr>              
                </thead>
            {{#each contents.Jobs}}
                   <tr class="warning">

                    {{#unless this.taken}}
                    <td><a href="/Jobs/find/{{this.id}}/{{this.ClientId}}">{{this.id}}</a></td>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    </tr>
                    {{/unless}}
            {{/each}}        
                </table>
            <hr>
        </div>
    </div>

     <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 job-panel text-center">
            <h3>All Contracts</h3>

            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    </tr>              
                </thead>
            {{#each contents.Jobs}}
                <tr class = "success">
                {{#if this.complete}}
                <tr class="danger">
                {{/if}}
                    {{# if this.taken}}
                    <td>{{this.id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    </tr>
                    {{/if}}
            {{/each}}        
                </table>
        </div>
    </div>

   
</div>